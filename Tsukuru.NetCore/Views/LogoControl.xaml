<UserControl x:Class="Tsukuru.Views.LogoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1020"
             UseLayoutRounding="True">

    <Grid>
        <Image Source="/Resources/background.svg" Stretch="Fill">

        </Image>

        <Image 
            Height="40"
            HorizontalAlignment="Left"
            Margin="10"
            Source="/Tsukuru;component/Resources/logo.png" />

        <Image             
            Cursor="Hand"
            HorizontalAlignment="Right"
            Margin="10,0"
            Source="/Tsukuru;component/Resources/gemidyne-logo.png"
            VerticalAlignment="Center"
            Width="188"
            Height="49" MouseLeftButtonDown="Image_MouseLeftButtonDown" />
    </Grid>
</UserControl>
