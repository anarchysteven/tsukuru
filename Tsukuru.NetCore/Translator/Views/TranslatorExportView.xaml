<UserControl x:Class="Tsukuru.Translator.Views.TranslatorExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Tsukuru.Translator.ViewModels"
             mc:Ignorable="d" 
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             d:DesignHeight="300" d:DesignWidth="600" 
             d:DataContext="{d:DesignInstance Type=viewModels:TranslatorExportViewModel}"
             DataContext="{Binding TranslatorExportViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" >
                    <Label>Tsukuru Translator project file (xxx.tsutproj)</Label>

                    <TextBox 
                        IsReadOnly="True"
                        Text="{Binding SelectedFile}"
                        VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Command="{Binding BrowseFileCommand}">
                    <Button.Content>
                        Open...
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="3" 
                    HorizontalAlignment="Right" 
                    Orientation="Horizontal">
            <Button
                Command="{Binding ExportCommand}" 
                Content="Export"
                Margin="5,0,0,0"
                Width="124"/>
        </StackPanel>
    </Grid>
</UserControl>
